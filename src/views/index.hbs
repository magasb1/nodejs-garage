<div class="row">
    <div class="col">
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-dark btn-circle btn-xl" id="btnOpen">Open</button>
        </div>
        <div class="pt-5 d-flex justify-content-center align-items-center">
            <h3>Status: <span id="sensorStatus"></span></h3>
        </div>
    </div>
</div>

<script>

    addEventListener("DOMContentLoaded", () => {
        fetch('/api/v1/door/status'})
            .then(response => response.json())
            .then(data => {
                console.log(data)
                document.querySelector('#sensorStatus').innerHTML = data.Message
            })
            .catch((error) => {
                console.error('Error:', error);
            });
    });

    document.querySelector("#btnOpen").addEventListener("click", (e) => {
        e.preventDefault()
        fetch('/api/v1/door', {
            method: 'POST'
